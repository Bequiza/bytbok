<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BytBok" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bottom_nav_selected_color</item>
        <item name="colorPrimaryVariant">@color/bottom_nav_background_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_brown</item>
        <item name="colorSecondaryVariant">@color/bottom_nav_selected_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bottom_nav_selected_color</item>
        <!-- Customize your theme here. -->
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>
    </style>

    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
        <item name="backgroundColor">@color/red_brown</item>
    </style>

<!--Outlined TextInputLayout Style-->
    <style name="CustomOutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Border color -->
        <item name="boxStrokeColor">@color/red_brown</item>
        <!-- Hint text color -->
        <item name="hintTextColor">@color/red_brown</item>
        <!-- ... add other styling attributes if needed ... -->
    </style>

    <!-- TextInputEditText Style -->
    <style name="CustomTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <!-- Text color -->
        <item name="android:textColor">@color/custom_text_color</item>
        <!-- ... add other styling attributes if needed ... -->
    </style>
</resources>